{
  "manifest_version": 2,
  "name": "WaMe Hopper",
  "version": "1.0",
  "description": "Easily open WhatsApp chats from selected phone numbers in Firefox.",
  "icons": {
    "48": "icons/icon64.png",
    "96": "icons/icon128.png"
  },
  "permissions": ["contextMenus", "tabs", "storage", "*://restcountries.com/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
