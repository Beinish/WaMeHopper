{
  "manifest_version": 2,
  "name": "WaMe Hopper",
  "version": "1.1",
  "description": "Easily open WhatsApp chats from selected phone numbers in Firefox.",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "permissions": ["contextMenus", "tabs", "storage", "*://restcountries.com/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["contentScript.js", "inject.js"]
    }
  ],
  "web_accessible_resources": ["contentScript.js", "inject.js"],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
